{
  "name": "newsave",
  "version": "1.0.2",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/NEWTONASOP/newsave.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "publish": "electron-builder --publish always",
    "git-push": "git add . && git commit -m \"Update\" && git push origin main",
    "tag-release": "for /f \"tokens=2 delims=:,\" %a in ('findstr /i \"version\" package.json') do (set ver=%~a) & set ver=%ver: =% & set ver=%ver:\"=% & git add . & git commit -m \"Release v%ver%\" & git push & git tag v%ver% & git push origin v%ver%"
  },
  "build": {
    "appId": "com.newsave.downloader",
    "productName": "NewSave",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NewSave"
    },
    "publish": {
      "provider": "github",
      "owner": "NEWTONASOP",
      "repo": "newsave",
      "releaseType": "release"
    },
    "asar": true,
    "asarUnpack": [
      "yt-dlp.exe"
    ],
    "files": [
      "**/*",
      "!dist/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "NewSave",
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.3.9",
    "express": "^4.21.2",
    "fs-extra": "^11.3.0",
    "path": "^0.12.7",
    "yt-dlp-exec": "^1.0.2"
  },
  "devDependencies": {
    "electron": "^35.0.3",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  }
}